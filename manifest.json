{
  "manifest_version": 3,
  "name": "ScanVui",
  "version": "2.1.0",
  "description": "Scan web pages to analyze forms, SEO, accessibility, and page structure. Get instant scores and detailed reports. Fun & Easy!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ScanVui - Page Analyzer"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  }
}
