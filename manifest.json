{
  "manifest_version": 3,
  "name": "ScanVui",
  "version": "3.1.0",
  "description": "Công cụ kiểm tra SEO & Accessibility cho web developers. Quét trang, phân tích form, tìm media, và nhiều tính năng hữu ích khác!",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "ScanVui - Page Analyzer"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js"
  }
}
